# Environment Variables for Roamy Application
# Copy this file to .env and fill in your actual values

# Google Maps API Key (required for map functionality)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# External API Keys for travel services
BOOKING_API_KEY=your_booking_com_api_key
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
RAPIDAPI_KEY=your_rapidapi_key

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Database credentials (for production)
PROD_DB_URL=jdbc:mysql://localhost:3306/roamy_prod
PROD_DB_USERNAME=roamy_user
PROD_DB_PASSWORD=your_production_password

# Payment gateway (Stripe example)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key